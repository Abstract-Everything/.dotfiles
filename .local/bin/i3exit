#!/usr/bin/env bash

case "$1" in
	lock)
		blurlock
		;;
	logout)
		i3-msg exit
		;;
	suspend)
		blurlock && systemctl suspend
		;;
	hibernate)
		blurlock && systemctl hibernate
		;;
	reboot)
		systemctl reboot
		;;
	poweroff)
		systemctl poweroff
		;;
	*)
		echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|poweroff}"
		exit 2
esac

exit 0
