" Configuration
set exrc

set termguicolors

set undofile
set nobackup
set noswapfile

set hidden

" User experience
"" Line numbers
set number
set relativenumber

"" Scrolling
set scrolloff=10

"" Searching
set incsearch
set ignorecase
set smartcase

set colorcolumn=80
set signcolumn=yes
set ruler

set nowrap
set foldclose=all

"" Spelling
set spell
set spelllang=en_gb
